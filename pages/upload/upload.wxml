<!--pages/upload/upload.wxml-->
<view class="container">
    
    <view>
      <picker bindchange="bindItypeChange" value="{{index}}" range="{{cateArr}}">
        <view class="picker">
          请选择类型:{{cateArr[index]}}
        </view>
      </picker>
    </view>

    <view class="tabs">
      <text class="tab" style="background:{{tab1bg}}" bindtap="chooseTab" data-tab="danxuan">单选</text>
      <!--<text class="tab" style="background:{{tab2bg}}">多选</text>-->
      <text class="tab" style="background:{{tab2bg}}" bindtap="chooseTab" data-tab="jianda">简答</text>
    </view>

    <!--单选-->
    <view style="display:{{danxuanDisplay}}">
    
          <input 
              style="margin-top:10px"
              class="input"
              type="text"
              placeholder="题目"
              confirm-type="done"
              bindblur="setTitle"
            />

            <view style="margin:5px 10px;">
              <text>答案</text>
            </view>


            <view class="classname">
            
              <input 
                class="input"
                type="text"
                placeholder="答案A"
                confirm-type="done"
                bindblur="setAns1"
              />
              <view style="height:5px;"></view>
              <input 
                class="input"
                type="text"
                placeholder="答案B"
                confirm-type="done"
                bindblur="setAns2"                
              />
              <view style="height:5px;"></view>
              <input 
                class="input"
                type="text"
                placeholder="答案C"
                confirm-type="done"
                bindblur="setAns3"                
              />
              <view style="height:5px;"></view>
              <input 
                class="input"
                type="text"
                placeholder="答案D"
                confirm-type="done"
                bindblur="setAns4"                
              />
              <view style="height:5px;"></view>
            </view>

            <view>
              <picker bindchange="bindPickerChange" value="{{answerIndex}}" range="{{answer}}">
                <view class="picker">
                  请选择正确答案:{{answer[answerIndex]}}
                </view>
              </picker>
            </view>

            <button class="submitButton" type="primary" bindtap="uploadDanxuan">确定</button>
    
    </view>

    <!--简答-->
    <view style="display:{{jiandaDisplay}}">
            <input 
              style="margin-top:10px"
              class="input"
              type="text"
              placeholder="题目"
              confirm-type="done"
              bindblur="setJTitle"
            />
            <!--api有bug，textarea暂时不用bindblur-->
            <textarea 
              placeholder="答案"
              class="textarea"
              bindinput="setJans"              
            />

            <button class="submitButton" type="primary" bindtap="uploadJianda">确定</button>
    </view>

</view>
